% Copyright note: This package defines how titles should
% be typeset at the Poliba University
\ProvidesPackage{polibatitle}
\RequirePackage{graphicx}
\RequirePackage{hyperref}
\newcommand*{\university}[1]{\gdef\@university{#1}}
\newcommand*{\@university}{Politecnico di Bari}
\newcommand*{\coursedegree}[1]{\gdef\@coursedegree{#1}}
\newcommand*{\@coursedegree}{Corso di Laurea in Ingegneria Informatica e dell'Automazione}
\newcommand*{\professor}[2][m]{\gdef\@professor{Corso del\ifthenelse{\equal{#1}{f}}{la}{} Prof.\ifthenelse{\equal{#1}{f}}{ssa}{} #2}}
\newcommand*{\assistant}[1]{\gdef\@assistant{Assistente #1}}
\newcommand*{\@assistant}{}
\newcommand*{\@department}[1]{Dipartimento di Ingegneria Elettrica e dell'Informazione}
\renewcommand*{\maketitle}{%
\begin{titlepage}
	\centering
	\includegraphics[width=0.20\textwidth]{images/logo_poliba.png} \par\vspace{1cm}
	{\scshape\LARGE\@university\unskip\strut\par}
	\vspace{1cm}
	{\scshape\Large\@coursedegree\unskip\strut\par}
	\vspace{1.5cm}
	{\huge\bfseries\@title\unskip\strut\par}
	\vspace{2.5cm}
	{\Large\itshape \@professor\unskip\strut\\ \ifthenelse{\equal{\@assistant}{}}{}{\@assistant\unskip\strut\\} \@department\unskip\strut\par}
	\vfill
\end{titlepage}
}
\endinput
